{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon -r dotenv/config src/server.js",
    "start": "node -r dotenv/config src/server.js",
    "client": "npm run dev --prefix ../client",
    "client-m": "npm run dev-m --prefix ../client",
    "admin": "npm run dev --prefix ../admin",
    "dev-client": "concurrently --kill-others-on-fail \"npm run dev\" \"npm run client\" ",
    "dev-client-m": "concurrently --kill-others-on-fail \"npm run dev\" \"npm run client-m\" ",
    "dev-admin": "concurrently --kill-others-on-fail \"npm run dev\" \"npm run admin\" ",
    "dev-all": "concurrently --kill-others-on-fail \"npm run dev\" \"npm run client\" \"npm run admin\" ",
    "build": "npm install && cd .. && cd client && npm install && npm run build && cd .. && cd server"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/nodemailer": "^6.4.16",
    "@types/sanitize-html": "^2.13.0",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.7"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.5.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-async-handler": "^1.2.0",
    "express-validator": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.7.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.15",
    "passport": "^0.7.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "sanitize-html": "^2.13.1",
    "sharp": "^0.33.5"
  }
}
